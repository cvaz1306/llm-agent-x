# Use an official Python runtime as a parent image
FROM python:3.11-slim

# Set the working directory in the container
WORKDIR /app

# Copy the dependency files
COPY pyproject.toml poetry.lock ./

# Install poetry and dependencies
# --no-root prevents poetry from creating a venv, which is good practice in Docker
RUN pip install poetry

RUN poetry config virtualenvs.create false

RUN poetry lock

RUN poetry install --without dev --no-interaction --no-ansi --no-root

# Copy the application code into the container
COPY ./llm_agent_x ./llm_agent_x

# Expose the port the gateway will run on
EXPOSE 8000

# Command to run the gateway
# Use the poetry script you defined in pyproject.toml
CMD ["poetry", "run", "llm-agent-x-gateway"]